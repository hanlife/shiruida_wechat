<!--page/home/equipment/equipment.wxml-->

<view class="view-body pd-t30">
    <view class="pd-l30 border-tb1px  bg-fff">
        <block wx:for="{{equipmentArray}}"  >
            <navigator class="jc h88 border-b1px" url="/page/home/equipment/detail/detail?id=0">
                <view>{{item.name}}</view>
                <view class="ai">
                    <text class="mg-r10">{{item.number}}</text>
                    <icon class="flex mg-r30" type="info" catchtap="Delete"  data-index="{{index}}"  ></icon>
                </view>
            </navigator>
        </block>
        <view class="h88">
          <navigator class="flex ai-center h88" url="/page/home/equipment/detail/detail?id=1">
            <image class="icon_addBlue" src="/icon/icon_addBlue.png"></image>
            <view class="lh1 mg-l20">添加闲置设备</view>
          </navigator> 
        </view>
         
    </view>

</view>