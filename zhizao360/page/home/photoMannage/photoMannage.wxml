
<!--page/home/photoMannage/photoMannage.wxml-->
<import src="../common/homeCommon.wxml" />
<view class="view-body fs28">
  <view class="images-wrapper mg-t30">
         <view class="jc lh1 mg-b28">
              <text class="images-text">封面图片</text>
              <text class="grey">{{panel1Sum}}/1</text>
         </view>
          <view class="images-list">
            <block wx:key="*this" wx:for-items="{{panel1ImageList}}" wx:for-index="index" wx:for-item="imgSrc">
              <view class="por mg-r50">
                <image src="{{imgSrc}}" class="images-image" data-src="{{imgSrc}}" data-index="1" bindtap="previewImage"></image>
              </view>
            </block>
            <template is="add-imageBox" data="{{bindtap:eventObj.ChooseImage1}}"></template>
          </view>
</view>

