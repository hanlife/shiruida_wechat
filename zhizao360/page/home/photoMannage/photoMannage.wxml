        </view>
      </block>
      <template is="add-imageBox" data="{{bindtap:eventObj.ChooseImage,index:'5'}}"></template>
    </view>
  </view>

  <view class="images-wrapper">
    <view class="jc lh1 mg-b28">
      <text class="images-text">产品图片</text>
      <view class="image-del" hidden="{{ImageList6.length > 0? false:true}}" bindtap="delImages" data-index="6">-</view>
    </view>
    <view class="images-list">
      <block wx:key="*this" wx:for-items="{{ImageList6}}" >
        <view class="por mg-r50">
          <view class="image-close" hidden="{{closeflag6}}" bindtap="removeImage" data-id="{{index}}" data-index="6" data-imgId="{{item.Id}}" >
            <image class="icon-delete" src="{{iconDeleteUrl}}"></image>
