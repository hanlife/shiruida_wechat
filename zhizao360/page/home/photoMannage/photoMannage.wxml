          </view>
          <image src="{{item.Compressed}}" class="images-image" data-src="{{item.Original}}}" data-index="4" data-imgIndex="{{index}}" bindtap="previewImage"></image>
        </view>
      </block>
      <template is="add-imageBox" data="{{bindtap:eventObj.ChooseImage,index:'4'}}"></template>
    </view>
  </view>

  <view class="images-wrapper">
    <view class="jc lh1 mg-b28">
      <text class="images-text">办公区域</text>
      <view class="image-del" hidden="{{ImageList5.length > 0? false:true}}" bindtap="delImages" data-index="5">-</view>
    </view>
    <view class="images-list">
      <block wx:key="*this" wx:for-items="{{ImageList5}}" >
        <view class="por mg-r50">
          <view class="image-close" hidden="{{closeflag5}}" bindtap="removeImage" data-id="{{index}}" data-index="5" data-imgId="{{item.Id}}" >
            <image class="icon-delete" src="{{iconDeleteUrl}}"></image>
          </view>
