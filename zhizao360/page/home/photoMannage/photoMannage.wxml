<!--page/home/photoMannage/photoMannage.wxml-->
<import src="../common/homeCommon.wxml" />
<view class="view-body fs28">
  <view class="images-wrapper mg-t30">
    <view class="jc lh1 mg-b28">
      <text class="images-text">封面图片</text>
      <text class="grey">{{Sum1}}/1</text>
    </view>
    <view class="images-list">
      <block wx:key="*this" wx:for-items="{{ImageList1}}">
        <view class="por mg-r50">
          <image src="{{item.Compressed}}" class="images-image" data-src="{{item.Original}}}" data-index="1"  bindtap="previewImage"></image>
        </view>
      </block>
      <template is="add-imageBox" data="{{bindtap:eventObj.ChooseImage1}}"></template>
    </view>
  </view>

  <view class="images-wrapper">
    <view class="jc lh1 mg-b28">
      <text class="images-text">大门照片</text>
      <text class="grey">{{Sum2}}/1</text>
    </view>
    <view class="images-list">
      <block wx:key="*this" wx:for-items="{{ImageList2}}" >
        <view class="por mg-r50">
          <image src="{{item.Compressed}}" class="images-image" data-src="{{item.Original}}}" data-index="2" bindtap="previewImage"></image>
        </view>
      </block>
      <template is="add-imageBox" data="{{bindtap:eventObj.ChooseImage2}}"></template>
    </view>
  </view>

  <view class="images-wrapper">
    <view class="jc lh1 mg-b28">
      <text class="images-text">加工设备</text>
      <view class="image-del" hidden="{{ImageList3.length > 0? false:true}}" bindtap="delImages" data-index="3">-</view>
    </view>
    <view class="images-list">
      <block wx:key="*this" wx:for-items="{{ImageList3}}" >
        <view class="por mg-r50">
          <view class="image-close" hidden="{{closeflag3}}" bindtap="removeImage" data-id="{{index}}" data-index="3"  data-imgId="{{item.Id}}" >
            <image class="icon-delete" src="{{iconDeleteUrl}}"></image>
          </view>
          <image src="{{item.Compressed}}" class="images-image" data-src="{{item.Original}}}" data-index="3" data-imgIndex="{{index}}" bindtap="previewImage"></image>
        </view>
      </block>
      <template is="add-imageBox" data="{{bindtap:eventObj.ChooseImage,index:'3'}}"></template>
    </view>
  </view>

  <view class="images-wrapper">
    <view class="jc lh1 mg-b28">
      <text class="images-text">检测设备</text>
      <view class="image-del" hidden="{{ImageList4.length > 0? false:true}}" bindtap="delImages" data-index="4">-</view>
