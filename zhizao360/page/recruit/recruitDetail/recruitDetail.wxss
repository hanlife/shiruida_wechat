.fixed-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 122rpx;
  z-index: 999;
}

.fixed-bottom .allBtn {
  height: 100%;
  line-height: 122rpx;
  padding-left: 67rpx;
}

.fixed-bottom icon {
  position: absolute;
  top: 38rpx;
  left: 0;
  line-height: 1;
}

.fixed-bottom .update {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #eee;
  text-align: center;
  margin-left: 110rpx;
  border-radius: 8rpx;
}

.fixed-bottom .stopRecruit {
  width: 176rpx;
  height: 66rpx;
  line-height: 66rpx;
  background-color: #f7f7fa;
  border: 2rpx solid #eee;
  text-align: center;
  margin-left: 56rpx;
  border-radius: 8rpx;
}

.fixed-bottom .update_active {
  color: #fff;
  background-color: #0189ff;
}

.fixed-bottom .stopRecruit_active {
  color: #0189ff;
  border-color: #0189ff;
  background-color: #fff;
}

.publish-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.margin-box {
  width: 750rpx;
  height: 177rpx;
}

.bottom-box {
  height: 122rpx;
  width: 750rpx;
}

.list-jobname {
  width: 428rpx;
  display: inline-block;
  line-height: 50rpx;
}
