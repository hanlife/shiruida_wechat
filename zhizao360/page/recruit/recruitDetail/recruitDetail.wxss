/* page/recruit/recruitDetail/recruitDetail.wxss */
@import '/module/homeCommon.wxss';

page {
  background-color: #fcf9fe;
}

.addRecuitInfo {
  height: 92rpx;
  padding-left: 97rpx;
}

.addRecuitInfo .icon_addBlue {
  position: absolute;
  top: 23rpx;
  left: 33rpx;
}

.switchTab {
  height: 85rpx;
  border-top: 1rpx solid #d6d5d6;
  border-bottom: 1rpx solid #d6d5d6;
}

.switchTab>view {
  box-sizing: border-box;
  line-height: 85rpx;
  width: 50%;
  display: inline-block;
}

.switchTab>view:first-child {
  border-right: 2rpx solid #d6d5d6;
}

.active {
  color: #09bb07;
  background-color: #fff;
}

.list-info {
  width: 585rpx;
  position: relative;
  padding-left: 65rpx;
}

.list-info .icon-box {
  position: absolute;
  top: 0;
  left: -30rpx;
  width: 97rpx;
  height: 86rpx;
}

icon {
  width: 46rpx;
  height: 46rpx;
  vertical-align: top;
}

/*.list-info icon[type='circle']{ position: absolute; top:21rpx; left: -30rpx;  }*/

.list-info icon[type='success'] {
  position: absolute;
  top: 21rpx;
  left: 28rpx;
}

