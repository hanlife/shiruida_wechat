/* page/recruit/filter/filter.wxss */
@import "../../../module/homeCommon.wxss";
page{ background-color: #fcf9fe; }
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}
.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  text-align: center;
}
.citybody{
   position: fixed;
   bottom: 0rpx;
}
.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}
.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}
.list{
  height: 90rpx;
  
  background-color: #fff;
  padding-left: 30rpx;
  color:#333;
  font-size: 34rpx;
}
.list .des{ color:#000; }
.fixedBtn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 68rpx;
  border:1px solid #d6d5d6;
}
.fixedBtn view:first{ border-right: 1px solid #d6d5d6;background-color: #fbfafc;}
.fixedBtn view{ height: 100%; width: 50%;text-align: center; line-height: 88rpx;}

picker-view-column view{
  line-height: 50px;
  padding-left:10px; 
  text-align: center;
}